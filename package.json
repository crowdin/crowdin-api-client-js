{
    "name": "crowdin-api-client",
    "version": "1.0.0",
    "description": "JavaScript library for Crowdin API v2.",
    "main": "out/index.js",
    "types": "out/index.d.ts",
    "repository": {
        "type": "git",
        "url": "https://github.com/crowdin/crowdin-api-client-js.git"
    },
    "files": [
        "out/**/*"
    ],
    "scripts": {
        "test": "jest --config jestconfig.json",
        "build": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint --fix '{src,tests}/**/*.{js,ts}'"
    },
    "keywords": [
        "Crowdin"
    ],
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^24.0.15",
        "@types/nock": "^10.0.3",
        "@typescript-eslint/eslint-plugin": "^2.3.1",
        "@typescript-eslint/parser": "^2.3.1",
        "eslint": "^6.4.0",
        "eslint-config-prettier": "^6.3.0",
        "eslint-plugin-prettier": "^3.1.1",
        "husky": ">=1",
        "jest": "^24.8.0",
        "jest-circus": "^24.8.0",
        "lint-staged": ">=8",
        "nock": "^10.0.6",
        "prettier": "^1.18.2",
        "ts-jest": "^24.0.2",
        "typescript": "^3.5.2"
    },
    "dependencies": {
        "@types/node": "^12.0.10",
        "axios": "^0.19.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && npm run test"
        }
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "git add"
        ]
    }
}
